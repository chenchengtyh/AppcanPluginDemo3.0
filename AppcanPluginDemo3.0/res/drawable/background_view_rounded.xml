<?xml version="1.0" encoding="UTF-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetLeft="0.0px"
    android:insetRight="0.0px" >

    <selector>
        <item android:state_pressed="true">
            <shape>
                <gradient
                    android:angle="270.0"
                    android:endColor="@color/base_start_color_pressed"
                    android:startColor="@color/base_end_color_pressed" />

                <corners
                    android:bottomLeftRadius="0.0dip"
                    android:bottomRightRadius="0.0dip"
                    android:radius="0.0dip"
                    android:topLeftRadius="1.0dip"
                    android:topRightRadius="1.0dip" />

                <stroke
                    android:width="1dp"
                    android:color="#eededede" />
            </shape>
        </item>
        <item>
            <shape>
                <gradient
                    android:angle="270.0"
                    android:endColor="@color/base_start_color_default"
                    android:startColor="@color/base_end_color_default" />

                <corners
                    android:bottomLeftRadius="0.0dip"
                    android:bottomRightRadius="0.0dip"
                    android:radius="0.0dip"
                    android:topLeftRadius="0.0dip"
                    android:topRightRadius="0.0dip" />

                <stroke
                    android:width="0.0dp"
                    android:color="#eededede" />
            </shape>
        </item>
    </selector>

</inset>