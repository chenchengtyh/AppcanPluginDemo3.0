<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="#a0e0b071" android:startColor="#a0a67637" />

            <stroke android:width="1dp" android:color="#5c3708" />

            <corners android:radius="1dp" />
        </shape></item>
    <item><shape>
            <stroke android:width="1dp" android:color="#BFBFBF" />

            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />

            <solid android:color="@color/blue" />
        </shape></item>

</selector>